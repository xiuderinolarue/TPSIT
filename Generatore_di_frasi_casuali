<body>

    <h1>Generatore di Frasi Casuali</h1>
    <button id="generaButton">Genera Frasi Casuali</button>

    <div class="combinazioni-container" id="combinazioniContainer">
        <!-- Le frasi generate verranno mostrate qui -->
    </div>

    <script>
        let soggetti = ["Mario", "Luca", "Giulia", "Anna", "Francesco", "Elena", "Roberto", "Sara", "Davide", "Chiara"];
        let verbi = ["mangia", "corre", "legge", "scrive", "disegna", "parla", "cammina", "guarda", "ascolta", "gioca"];
        let complemento = ["una mela", "nel parco", "un libro", "una lettera", "un quadro", "al telefono", "sul marciapiede", "la TV", "musica", "a calcio"];

        // Funzione per generare una frase casuale
        function generaFraseCasuale() {
            let soggetto = soggetti[Math.floor(Math.random() * soggetti.length)];
            let verbo = verbi[Math.floor(Math.random() * verbi.length)];
            let compl = complemento[Math.floor(Math.random() * complemento.length)];

            return `${soggetto} ${verbo} ${compl}`;
        }

        // Funzione per visualizzare una nuova combinazione di frase
        function mostraFrase() {
            let container = document.getElementById("combinazioniContainer");
            let frase = generaFraseCasuale();

            let div = document.createElement("div");
            div.classList.add("combinazione");
            div.textContent = frase;

            container.appendChild(div);
        }

        // Aggiungi l'evento al bottone per generare una nuova frase
        document.getElementById("generaButton").addEventListener("click", mostraFrase);
    </script>
    
</body>
